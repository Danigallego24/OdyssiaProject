<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register2Page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/odyssiaregisterpage"
    tools:context=".Registro2Activity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- ProgressBar Lineal -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="300dp"
                android:layout_height="10dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="33"
                android:progressDrawable="@drawable/custom_progressbar" />

            <!-- User Field -->
            <EditText
                android:id="@+id/etUsuario"
                android:layout_width="350dp"
                android:layout_height="49dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/textuser"
                android:hint="Usuario"
                android:inputType="text"
                android:paddingLeft="50dp"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <!-- Password Field -->
            <EditText
                android:id="@+id/etContrasenia"
                android:layout_width="350dp"
                android:layout_height="49dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/textpass"
                android:hint="ContraseÃ±a"
                android:inputType="text"
                android:paddingLeft="50dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <!-- E-mail Field -->
            <EditText
                android:id="@+id/etEMail"
                android:layout_width="350dp"
                android:layout_height="49dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/textemail"
                android:hint="E-mail"
                android:inputType="text"
                android:paddingLeft="50dp"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <!-- Continue Button -->
            <ImageButton
                android:id="@+id/btnContinuar"
                android:layout_width="168dp"
                android:layout_height="49dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttoncontinue"
                android:contentDescription="boton continuar" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>