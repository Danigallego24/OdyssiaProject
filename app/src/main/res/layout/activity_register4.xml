<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register4Page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/odyssiaregisterpage"
    tools:context=".Registro4Activity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/odyssiaRegisterText"
                android:layout_width="334dp"
                android:layout_height="177dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/odyssiaregistertext" />

            <ImageButton
                android:id="@+id/btnContinuar"
                android:layout_width="168dp"
                android:layout_height="49dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/buttoncontinue"
                android:contentDescription="boton continuar"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>