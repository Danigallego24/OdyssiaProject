<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6E9FF"
    tools:context=".Register">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/odyssialogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nameField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <!-- Name Field -->
    <EditText
        android:id="@+id/nameField"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textname"
        android:hint="Name"
        android:inputType="text"
        android:paddingLeft="50dp"
        android:textColor="#D4D4D4"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Surname Field -->
    <EditText
        android:id="@+id/surnameField"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/textsurname"
        android:hint="Surname"
        android:inputType="text"
        android:paddingLeft="50dp"
        android:textColor="#D4D4D4"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/nameField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- User Field -->
    <EditText
        android:id="@+id/userField"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/textuser"
        android:hint="User"
        android:inputType="text"
        android:paddingLeft="50dp"
        android:textColor="#D4D4D4"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/surnameField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Password Field -->
    <EditText
        android:id="@+id/passField"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/textpassword"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="50dp"
        android:textColor="#D4D4D4"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/userField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email Field -->
    <EditText
        android:id="@+id/emailField"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/textemail"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:paddingLeft="50dp"
        android:textColor="#D4D4D4"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/passField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Date Field -->
    <EditText
        android:id="@+id/dateField"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/textdate"
        android:hint="Birthdate"
        android:inputType="date"
        android:paddingLeft="50dp"
        android:textColor="#D4D4D4"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/emailField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nation Field -->
    <EditText
        android:id="@+id/nationField"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/textnation"
        android:hint="Nationality"
        android:inputType="text"
        android:paddingLeft="50dp"
        android:textColor="#D4D4D4"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/dateField"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Next Button -->
    <ImageButton
        android:id="@+id/buttonNext"
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/buttonregister"
        android:contentDescription="boton para iniciar sesiÃ³n"
        app:layout_constraintTop_toBottomOf="@id/nationField"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>